<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page_App">

    <TextView
        android:id="@+id/tv_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Starting...."
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spTransYear"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" />

            <Spinner
                android:id="@+id/spStockName"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <com.ws.libmyui.MyMenu
            android:id="@+id/menuApp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <com.ws.mystock.Page_All_Transactions
        android:id="@+id/pgAllTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ws.mystock.Page_All_Annuals
        android:id="@+id/pgAllAnnuals"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ws.mystock.Page_All_Annual_Year
        android:id="@+id/pgAllAnnualYear"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ws.mystock.Page_Stock_Transactions
        android:id="@+id/pgStockTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ws.mystock.Page_Stock_Annuals
        android:id="@+id/pgStockAnnuals"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>